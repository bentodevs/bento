{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "no-console": "off",
        "no-unused-vars": "warn",
        "no-useless-escape": "warn",
        "no-empty": "warn",
        "no-var": "error",
        "no-mixed-spaces-and-tabs": "warn",
        "prefer-const": "warn",
        "require-atomic-updates": "off",
        "no-extra-semi": "warn",
        "semi": [2, "always"]
    }
}